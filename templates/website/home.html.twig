{% extends 'layout.html.twig' %}

{% block content %}
<div class="container-fluid mt-2">
    <div class="row">
        <div class="col-xs-12 col-md-7">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    {% for level in mostPlayedLevels %}
                    <div class="swiper-slide">
                        <img src="https://editor.wooly.cat/src/assets/screenshots/{{ level.slug }}.png" alt="{{ level.name }}">
                    </div>
                    {% endfor %}
                </div>
                <!-- Add Pagination -->
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <div class="col-xs-12 col-md-5">
            <news></news>
        </div>
    </div>

    <h2 class="mt-5">Derniers niveaux créés</h2>
    <div class="row m-2 mt-5">
        {% for level in levels %}
            <div class="col-md-4 col-sm-6 col-xs-12 mb-3 home-level shadow-lg">
                <a href="{{ url('levelIndex', {id: level.id}) }}">
                    <h3>{{ level.name }}</h3>
                    <div class="thumbnail">
                        <img src="https://editor.wooly.cat/src/assets/screenshots/{{ level.slug }}.png" alt="{{ level.name }}">
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
    <a href="{{ path('levelListing') }}" class="btn btn-primary all-levels mb-5">Voir tous les niveaux</a>
</div>
{% endblock %}
