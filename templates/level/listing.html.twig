{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            {% for level in levels %}
                <div class="col-4">
                    <div class="row" style="border: 2px solid yellow; border-radius: 25px; overflow: hidden">
                        <a class="col-7"  href="/level/{{ level.id }}" style="padding: 0">
                            <img src="{{ level.thumbnail }}" alt="???" style="height: 100%; object-fit: cover;">
                        </a>
                        <div class="col-5">
                            <h4> level.title </h4>
                            <a href="{{ url('userIndex', {usernameCanonical: level.user.usernameCanonical}) }}">{{ level.user.username }}</a>
                            <p> level.description </p>
                            <p>*****</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}